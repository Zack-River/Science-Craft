@model IEnumerable<Course>
@{
    ViewData["Title"] = "Courses";
}

<h3>Course List</h3>
<table class="table table-hover" width="100%">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Description</td>
        <td>Status</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @if(item.Status)
            {
                <td style="color: green;">Approved</td>
            }
            else
            {
                <td style="color: red;">Cancelled</td>
            }
        </tr>
    }
</table>